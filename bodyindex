function Rechnen ()

{

var Ergebnis = (Math.round(document.formular.Gewicht.value/document.formular.Groesse.value/document.formular.Groesse.value*100*100*100)/100);
document.getElementById ('ergebnis').value=(Ergebnis);


}


</script>
